Page{
    background-color: #F7F9FB;
}

.bg{
    background-color: #ffffff;
    display: block;
    margin: 100rpx 40rpx 65rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}

.bg .moviePoster{
    width: 242rpx;
    margin-left: 50%;
    transform: translate(-50%,-60rpx);
    box-shadow: 0 0 20px rgba(100, 100, 100, .4)
}

.bg .title{
    text-align: center;
    font-size: 40rpx;
    font-weight: 600;
    color: #000;
    margin-top: -30rpx;
}

.bg .description{
    text-align: center;
    color: #333;
    font-size: 30rpx;
    margin: 65rpx 80rpx 165rpx;
    line-height: 50rpx;
}

.btn-container {
    display: flex;
    justify-content: space-between;
    margin: 0 60rpx 48rpx;
}

.btn-container view{
    width: 45%;
    height: 80rpx;
    text-align: center;
    background-color: #fff;
    font-size: 24rpx;
    line-height: 80rpx;
    color: #7999AA;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}

.btn-container view image{
    width: 40rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}