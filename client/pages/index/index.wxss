Page {
    background-color: #F7F9FB;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.btn-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #C2C7CB;
}

.btn-container view{
    width: 100%;
    height: 120rpx;
    text-align: center;
    background-color: #fff;
    font-size: 30rpx;
    line-height: 120rpx;
    color: #8294A2;
}

.btn-container view image{
    width: 40rpx;
    margin-right: 20rpx;
    vertical-align: middle;
     margin-top: -12rpx; 
}

.content{
    display: flex;
    flex-direction: column;
    text-align: center;
}

.content .moviePoster{
    width: 540rpx;
    margin-top: 40rpx;
    box-shadow: 0 0 20px rgba(100, 100, 100, .4)   
}

.content text{
    font-size: 36rpx;
    color: #2A3A46;
    margin-top: 32rpx;
}

.content view{
    font-size: 28rpx;
    color: #343B43;
    margin-top: 20rpx;
}

.content .avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 20rpx;
}
