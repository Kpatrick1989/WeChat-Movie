Page{
    background-color: #F7F9FB;
}

.list{
    padding-bottom: 125rpx;
}

.option{
    text-align: center;
    margin-top: 100rpx;
    margin-bottom: 100rpx;
    font-size:26rpx;
    color: #F6A48B;
    font-weight: bold;
}

.box{
    width: 655rpx;
    height: 295rpx;
    border: 1rpx solid #ccc;
    background-color: #fff;
    margin: 40rpx auto;
    display: flex;
}

.moviePoster image{
    width: 211rpx;
    height: 295rpx;
}

.movieInfo{
    margin-left: 42rpx;
}

.movieInfo .title{
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    display: block;
    margin-top: 45rpx;
}

.avatar{
    font-size: 24rpx;
    color: #343B43;
}

.avatar image{
    width: 55rpx;
    height: 55rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 16rpx;
}

.content{
    padding-right: 60rpx;
    box-sizing: border-box;
}

.description{
    color: #000;
    font-size: 24rpx;
    margin-top: 30rpx;
    margin-bottom: 40rpx;
    min-height: 68rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}

.record image{
    width: 40rpx;
    vertical-align: middle;
    margin-left: 40rpx;
    margin-right: 10rpx;
    margin-top: -5rpx;
}

.record{
    width: 290rpx; height: 60rpx;
    border-radius: 6rpx;
    background-color: #E0E8ED;
    border: 1px solid #8195A4;
    line-height: 60rpx;
    vertical-align: middle;
    font-size: 30rpx;
    margin-top: 36rpx;
    margin-bottom: 34rpx;
}

.emptyComment{
    font-size: 28rpx;
    text-align: center;
    background-color: #ffffff;
    display: block;
    margin: 40rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}

.emptyComment image{
    display: flex;
    flex-direction: row;
    margin-left: 50%;
    transform: translateX(-50%);
    width: 180rpx;
    margin-top: 280rpx;
}

.emptyComment view{
    margin-bottom: 280rpx;
}

.btn-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #C2C7CB;
}

.btn-container view{
    width: 100%;
    height: 120rpx;
    text-align: center;
    background-color: #fff;
    font-size: 30rpx;
    line-height: 120rpx;
    color: #8294A2;
}