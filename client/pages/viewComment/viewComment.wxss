/* pages/viewComment/viewComment.wxss */
Page{
    background-color: #F7F9FB;
}

.box{
    margin-top: 41rpx;
}

.comment{
    border: 1rpx solid #ccc;
    background-color: #fff;
    height: 248rpx;
    margin-top: -1rpx;
}

.info{
    font-size: 28rpx;
    color: #343B43;
    margin-top: 46rpx;
    margin-left: 74rpx;
}

.avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 20rpx;
}

.description{
    margin-top: 35rpx;
    margin-left: 100rpx;
    margin-right:60rpx;
    color: #000;
    font-size: 30rpx;
    line-height: 50rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}

.record{
    width: 290rpx; height: 60rpx;
    border-radius: 6rpx;
    background-color: #E0E8ED;
    border: 1px solid #8195A4;
    line-height: 60rpx;
    vertical-align: middle;
    font-size: 30rpx;
    margin-left: 100rpx;
    margin-top: 20rpx;
}

.record image{
    width: 40rpx;
    vertical-align: middle;
    margin-left: 40rpx;
    margin-right: 10rpx;
    margin-top: -5rpx;
}

.emptyComment{
    font-size: 28rpx;
    text-align: center;
    background-color: #ffffff;
    display: block;
    margin: 40rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}

.emptyComment image{
    display: flex;
    flex-direction: row;
    margin-left: 50%;
    transform: translateX(-50%);
    width: 180rpx;
    margin-top: 350rpx;
}

.emptyComment view{
    margin-bottom: 350rpx;
}

.btn-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #C2C7CB;
}

.btn-container view{
    width: 100%;
    height: 120rpx;
    text-align: center;
    background-color: #fff;
    font-size: 30rpx;
    line-height: 120rpx;
    color: #8294A2;
}